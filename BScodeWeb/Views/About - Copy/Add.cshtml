@using BSCodeModels_Lib
@model About
@{
    Layout = "_ActionLayout";
    ViewData["Header"] = "About";
}

@using (Html.BeginForm("Add", "About", FormMethod.Post, new { @class = "row g-3", enctype="multipart/form-data"}))
{
     <div class="offset-md-2 col-md-8">
        @Html.LabelFor(model => model.Title, new { @class = "form-label" })
        @Html.TextBoxFor(model =>  model.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(model =>  model.Title, "", new { @class = "text-danger" })
    </div>

     <div class="offset-md-2 col-md-8">
        @Html.LabelFor(model =>  model.ShortDescription, new { @class = "form-label" })
        @Html.TextAreaFor(model => model.ShortDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ShortDescription, "", new { @class = "text-danger" })
    </div>

     <div class="offset-md-2 col-md-8">
        @Html.LabelFor(model => model.LongDescription, new { @class = "form-label" })
        @Html.TextAreaFor(model => model.LongDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.LongDescription, "", new { @class = "text-danger" })
    </div>

     <div class="offset-md-2 col-md-8">
        @Html.LabelFor(model => model.AboutPoints, new { @class = "form-label", @placeholder = "Separet points with ';'. Example: point1 some poiny; point2 some point; point3 some point" })
        @Html.TextBoxFor(model => model.AboutPoints, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.AboutPoints, "", new { @class = "text-danger" })
    </div>

     <div class="offset-md-2 col-md-8">
        @Html.LabelFor(model => model.LastThought, new { @class = "form-label" })
        @Html.TextAreaFor(model => model.LastThought, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.LastThought, "", new { @class = "text-danger" })
    </div>

    <div class="offset-md-2 col-md-8">
        @Html.LabelFor(model => model.ImageName, new { @class = "form-label" })
         <input type="file" id="ImageFile" name="ImageFile" size="23" class = "form-control" />
    </div>

     <div class="offset-md-2 col-md-4">
        <button type="submit" class="btn btn-primary form-control">Add</button>
    </div>
     <div class="col-md-4">
        <a asp-controller="About" asp-action="List" class="btn btn-danger form-control">Cancel</a>
    </div>
}

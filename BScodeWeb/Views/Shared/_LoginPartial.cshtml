@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="list-group list-group-horizontal ms-auto" style="list-style-type: none;">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-outline-success" asp-controller="User" asp-action="Logout">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-outline-success" asp-controller="User" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-outline-primary" asp-controller="User" asp-action="Login">Login</a>
        </li>
    }
</ul>
